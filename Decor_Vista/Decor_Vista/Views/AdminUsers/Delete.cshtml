@model Decor_Vista.Models.User
@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --brand-yellow: #ebcd1e;
        --brand-black: #333;
    }

    .card-header.bg-custom-delete {
        background-color: var(--brand-black) !important;
        color: var(--brand-yellow) !important;
    }

    .alert.alert-custom-warning {
        background-color: #fef8e2;
        border-color: var(--brand-yellow);
        color: var(--brand-black);
        font-weight: 500;
    }

    .btn-custom-delete {
        background-color: var(--brand-black);
        border-color: var(--brand-black);
        color: var(--brand-yellow);
        font-weight: bold;
    }

        .btn-custom-delete:hover {
            background-color: #555;
        }
</style>

<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">User Management</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "AdminUsers")">All Users</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete User</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-custom-delete">
                    <h5 class="mb-0 text-white">
                        <i class="material-icons-outlined" style="vertical-align: middle;">warning</i> Confirm Deletion
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-custom-warning">
                        <strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this user?
                    </div>

                    <div class="d-flex align-items-center mb-4">
                        <img src="@Model.Img" alt="User Image" class="rounded-circle" width="90" height="90" style="object-fit: cover; border: 3px solid #ddd;">
                        <div class="ms-4">
                            <h5 class="mb-0">@Model.firstname @Model.lastname</h5>
                            <p class="text-muted mb-0">@Model.email</p>
                            <p class="text-muted mb-0">Username: @Model.username</p>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-3">
                        <input type="hidden" asp-for="user_id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-custom-delete">
                                <i class="material-icons-outlined" style="vertical-align: bottom;">delete_forever</i> Yes, Delete User
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="material-icons-outlined" style="vertical-align: bottom;">cancel</i> No, Go Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
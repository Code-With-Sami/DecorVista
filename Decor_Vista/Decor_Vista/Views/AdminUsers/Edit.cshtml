@model Decor_Vista.Models.User
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --brand-yellow: #ebcd1e;
        --brand-black: #333;
    }

    .card-header-custom {
        background-color: var(--brand-black);
        color: var(--brand-yellow);
    }

    .form-control:focus {
        border-color: var(--brand-yellow);
        box-shadow: 0 0 0 0.2rem rgba(235, 205, 30, 0.25);
    }

    .btn-custom-save {
        background-color: var(--brand-yellow);
        color: var(--brand-black);
        font-weight: bold;
    }

        .btn-custom-save:hover {
            background-color: #d4b91a;
        }

    /* New styles for the profile header */
    .profile-header {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: .5rem;
        margin-bottom: 1.5rem;
    }

    .profile-header-img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid white;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .profile-header-name {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--brand-black);
    }

    .profile-header-email {
        color: #6c757d;
    }
</style>

<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">User Management</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "AdminUsers")">All Users</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit User</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Profile Header Section -->
    <div class="d-flex align-items-center profile-header">
        <img src="@Model.Img" alt="Current Image" class="profile-header-img">
        <div class="ms-4">
            <h4 class="profile-header-name mb-0">@Model.firstname @Model.lastname</h4>
            <p class="profile-header-email mb-0">@Model.email</p>
        </div>
    </div>

    <div class="row">
        <!-- Left Column: Edit User Details -->
        <div class="col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header card-header-custom">
                    <h5 class="mb-0 text-white">Edit User Details</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="user_id" />
                        <div class="row">
                            <div class="col-md-6 mb-3"><label asp-for="firstname"></label><input asp-for="firstname" class="form-control" /></div>
                            <div class="col-md-6 mb-3"><label asp-for="lastname"></label><input asp-for="lastname" class="form-control" /></div>
                            <div class="col-md-6 mb-3"><label asp-for="username"></label><input asp-for="username" class="form-control" /></div>
                            <div class="col-md-6 mb-3"><label asp-for="email"></label><input asp-for="email" class="form-control" /></div>
                            <div class="col-md-6 mb-3"><label asp-for="contactnumber"></label><input asp-for="contactnumber" class="form-control" /></div>
                            <div class="col-md-6 mb-3"><label asp-for="address"></label><input asp-for="address" class="form-control" /></div>
                            <div class="col-md-12 mb-3">
                                <label for="imgFile" class="form-label">Update Profile Image</label>
                                <input type="file" class="form-control" id="imgFile" name="imgFile" accept="image/*" />
                                <small class="text-muted">Upload a new image to replace the current one.</small>
                            </div>
                        </div>
                        <hr class="my-3" />
                        <button type="submit" class="btn btn-custom-save">Save Details</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Column: Change Password -->
        <div class="col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header" style="background-color: #555; color: white;">
                    <h5 class="mb-0 text-white">Change Password</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ChangePassword" method="post">
                        <input type="hidden" name="UserId" value="@Model.user_id" />
                        <div class="mb-3">
                            <label class="form-label">Current Password</label>
                            <input type="password" name="OldPassword" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">New Password</label>
                            <input type="password" name="NewPassword" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Confirm New Password</label>
                            <input type="password" name="ConfirmPassword" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-danger w-100">Update Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Hash Test - Decor Vista</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h4>Password Hash Test Results</h4>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <tr>
                                <td><strong>Test Password:</strong></td>
                                <td>@ViewBag.TestPassword</td>
                            </tr>
                            <tr>
                                <td><strong>Generated Hash:</strong></td>
                                <td><code>@ViewBag.GeneratedHash</code></td>
                            </tr>
                            <tr>
                                <td><strong>Expected Hash:</strong></td>
                                <td><code>@ViewBag.ExpectedHash</code></td>
                            </tr>
                            <tr>
                                <td><strong>Hash Match:</strong></td>
                                <td>
                                    @if (ViewBag.HashMatch)
                                    {
                                        <span class="badge bg-success">✓ MATCH</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">✗ MISMATCH</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Admin Count in DB:</strong></td>
                                <td>@ViewBag.AdminCount</td>
                            </tr>
                        </table>
                        
                        <div class="mt-3">
                            <a href="@Url.Action("Login", "Admin")" class="btn btn-primary">Go to Login</a>
                            <a href="@Url.Action("Register", "Admin")" class="btn btn-secondary">Go to Register</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html> 
@model Decor_Vista.Models.Admin
@{
    ViewData["Title"] = "Admin Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Custom Color Theme Variables */
    :root {
        --brand-yellow: #ebcd1e;
        --brand-black: #333;
    }

    /* Main Profile Card Styling (Left) */
    .profile-card {
        background-color: var(--brand-black);
        color: #fff;
        border-radius: 15px;
        border: none;
        padding: 2rem 1rem;
        margin-top: 1rem;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    }

        .profile-card .profile-image {
            width: 130px;
            height: 130px;
            object-fit: cover;
            border-radius: 50%;
            border: 4px solid var(--brand-yellow);
            padding: 5px;
            background-color: white; /* To make the padding visible */
        }

        .profile-card .admin-name {
            color: var(--brand-yellow);
            margin-top: 1.5rem;
            font-weight: 600;
        }

        .profile-card .admin-email {
            color: #ccc;
            font-size: 0.9rem;
        }

        .profile-card hr {
            border-top: 1px solid #555;
        }

        .profile-card .role-badge {
            background-color: var(--brand-yellow);
            color: var(--brand-black);
            font-weight: bold;
            padding: 0.4em 0.8em;
        }

    /* Edit Profile Button */
    .btn-edit-profile {
        background-color: var(--brand-yellow);
        color: var(--brand-black);
        font-weight: bold;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-edit-profile:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            color: var(--brand-black);
        }

    /* Details Card Tabs (Right) */
    .nav-tabs .nav-link {
        color: #555;
        font-weight: 500;
    }

        .nav-tabs .nav-link.active {
            color: var(--brand-black) !important;
            border-color: #dee2e6 #dee2e6 var(--brand-yellow) !important;
            border-bottom: 3px solid var(--brand-yellow) !important;
        }

    .profile-details-row {
        margin-bottom: 1.5rem;
    }

        .profile-details-row dt {
            font-weight: 600;
            color: var(--brand-black);
        }

        .profile-details-row dd {
            color: #555;
        }
</style>

<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">User Profile</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")"><i class="bx bx-home-alt"></i></a></li>
                    <li class="breadcrumb-item active" aria-current="page">Profile</li>
                </ol>
            </nav>
        </div>
        <div class="ms-auto">
            <a asp-action="EditProfile" class="btn btn-edit-profile">
                <i class="bx bx-pencil me-1"></i> Edit Profile
            </a>
        </div>
    </div>

    <!-- Display Success Messages -->
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Left Column: Profile Card -->
        <div class="col-lg-4">
            <div class="card profile-card text-center">
                <img src="@Model.Img" alt="Admin" class="profile-image mx-auto">
                <h4 class="admin-name">@Model.Name</h4>
                <p class="admin-email">@Model.Email</p>
                <div class="mt-2">
                    <span class="badge rounded-pill role-badge">Administrator</span>
                </div>
            </div>
        </div>

        <!-- Right Column: Details & Timeline -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-bordered" id="profileTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="about-tab" data-bs-toggle="tab" data-bs-target="#about-content" type="button" role="tab" aria-controls="about-content" aria-selected="true">About</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="timeline-tab" data-bs-toggle="tab" data-bs-target="#timeline-content" type="button" role="tab" aria-controls="timeline-content" aria-selected="false">Timeline</button>
                        </li>
                    </ul>
                    <div class="tab-content pt-3" id="profileTabContent">
                        <!-- About Tab Content -->
                        <div class="tab-pane fade show active" id="about-content" role="tabpanel" aria-labelledby="about-tab">
                            <h5 class="mb-4 text-dark">Profile Details</h5>
                            <div class="profile-details-row row">
                                <dt class="col-sm-3">Full Name</dt>
                                <dd class="col-sm-9">@Model.Name</dd>
                            </div>
                            <div class="profile-details-row row">
                                <dt class="col-sm-3">Email Address</dt>
                                <dd class="col-sm-9">@Model.Email</dd>
                            </div>
                            <div class="profile-details-row row">
                                <dt class="col-sm-3">Role</dt>
                                <dd class="col-sm-9">System Administrator</dd>
                            </div>
                            <div class="profile-details-row row">
                                <dt class="col-sm-3">Status</dt>
                                <dd class="col-sm-9"><span class="badge bg-success">Active</span></dd>
                            </div>
                        </div>

                        <!-- Timeline Tab Content (Placeholder) -->
                        <div class="tab-pane fade" id="timeline-content" role="tabpanel" aria-labelledby="timeline-tab">
                            <h5 class="mb-4 text-dark">Recent Activity</h5>
                            <p>Timeline feature coming soon...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model Decor_Vista.Models.Admin
@{
    ViewData["Title"] = "Delete Admin - Decor Vista";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Custom Color Theme Variables */
    :root {
        --brand-yellow: #ebcd1e;
        --brand-black: #333;
    }

    /* Card Header Styling */
    .card-header.bg-custom-delete {
        background-color: var(--brand-black) !important;
        color: var(--brand-yellow) !important;
    }

    /* Alert Styling */
    .alert.alert-custom-warning {
        background-color: #fef8e2; /* A light yellow for the background */
        border-color: var(--brand-yellow);
        color: var(--brand-black);
        font-weight: 500;
    }

    /* Button Styling */
    .btn-custom-delete {
        background-color: var(--brand-black);
        border-color: var(--brand-black);
        color: var(--brand-yellow);
        font-weight: bold;
    }

        .btn-custom-delete:hover {
            background-color: #555;
            border-color: #555;
            color: var(--brand-yellow);
        }

    .btn-outline-secondary {
        border-color: #6c757d;
    }

</style>

<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Admin Management</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">All Admins</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete Admin</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Added justify-content-center to center the card -->
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 col-xl-7">
            <!-- Used custom classes for styling -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-custom-delete text-white">
                    <h5 class="mb-0 text-white">
                        <i class="material-icons-outlined" style="vertical-align: middle;">warning</i> Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-custom-warning">
                        <strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this admin?
                    </div>

                    <div class="row align-items-center mb-4">
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            <img src="@Model.Img" alt="Admin Image" class="rounded-circle img-fluid shadow-sm" width="120" height="120" style="object-fit: cover; border: 3px solid var(--brand-yellow);">
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-3">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-custom-delete">
                                <i class="material-icons-outlined" style="vertical-align: bottom;">delete_forever</i> Delete Admin
                            </button>
                            <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary">
                                <i class="material-icons-outlined" style="vertical-align: bottom;">arrow_back</i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
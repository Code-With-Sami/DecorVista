@model Decor_Vista.Models.Gallery
@{
    ViewData["Title"] = "Gallery Item Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --brand-yellow: #ebcd1e;
        --brand-black: #333;
    }

    .card-header-custom {
        background-color: var(--brand-black);
        color: var(--brand-yellow);
    }

    .details-image {
        width: 100%;
        max-height: 400px;
        object-fit: cover;
        border-radius: .5rem;
        border: 4px solid #fff;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .details-section dt {
        font-weight: 600;
        color: var(--brand-black);
    }

    .details-section dd {
        color: #555;
    }

    .btn-custom-edit {
        background-color: var(--brand-yellow);
        color: var(--brand-black);
        font-weight: bold;
    }
</style>

<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Inspiration Gallery</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a asp-action="Index">View Gallery</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Item Details</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header card-header-custom">
                    <h5 class="mb-0 text-white">Details for: @Model.Title</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Image Column -->
                        <div class="col-md-5 text-center">
                            <img src="@Model.ImagePath" class="details-image" alt="@Model.Title" />
                        </div>

                        <!-- Details Column -->
                        <div class="col-md-7">
                            <h3 class="mt-3 mt-md-0" style="color: var(--brand-black);">@Model.Title</h3>
                            <hr>
                            <dl class="row details-section gy-3">
                                <dt class="col-sm-4">Gallery ID</dt>
                                <dd class="col-sm-8">#@Model.GalleryId</dd>

                                <dt class="col-sm-4">Category</dt>
                                <dd class="col-sm-8">@Model.Category</dd>

                                <dt class="col-sm-4">Sub-Category</dt>
                                <dd class="col-sm-8">@(Model.SubCategory ?? "N/A")</dd>

                                <dt class="col-sm-4">Created On</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("dd MMMM, yyyy")</dd>

                                <dt class="col-sm-4">Last Updated</dt>
                                <dd class="col-sm-8">@(Model.UpdatedAt?.ToString("dd MMMM, yyyy") ?? "Never")</dd>

                                <dt class="col-sm-4">Description</dt>
                                <dd class="col-sm-8">
                                    <p class="mb-0">@(Model.Description ?? "No description provided.")</p>
                                </dd>
                            </dl>
                            <hr>
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.GalleryId" class="btn btn-custom-edit">Edit Item</a>
                                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
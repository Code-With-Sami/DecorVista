@model Decor_Vista.Models.Gallery
@{
    ViewData["Title"] = "Confirm Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --brand-yellow: #ebcd1e;
        --brand-black: #333;
    }

    .card-header-delete {
        background-color: var(--brand-black);
        color: var(--brand-yellow);
    }

    .alert-warning-custom {
        background-color: #fef8e2;
        border-color: var(--brand-yellow);
        color: var(--brand-black);
    }

    .btn-delete-confirm {
        background-color: #d9534f;
        color: white;
    }

    .delete-item-thumb {
        width: 100%;
        max-width: 250px;
        height: auto;
        border-radius: .5rem;
        border: 3px solid #ddd;
    }
</style>

<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Inspiration Gallery</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a asp-action="Index">View Gallery</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Confirm Deletion</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header card-header-delete">
                    <h5 class="mb-0"><i class="material-icons-outlined" style="vertical-align: middle;">warning</i> Delete Confirmation</h5>
                </div>
                <div class="card-body text-center p-4">
                    <div class="alert alert-warning-custom">
                        <strong>Warning!</strong> This action is permanent and cannot be undone.
                    </div>

                    <h5 class="mt-4">Are you sure you want to delete this item?</h5>

                    <div class="my-4">
                        <img src="@Model.ImagePath" class="delete-item-thumb" alt="@Model.Title" />
                        <h6 class="mt-3 mb-0"><strong>Title:</strong> @Model.Title</h6>
                        <p class="text-muted"><strong>Category:</strong> @Model.Category</p>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="GalleryId" />
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-delete-confirm px-4">Yes, Delete It</button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">No, Go Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
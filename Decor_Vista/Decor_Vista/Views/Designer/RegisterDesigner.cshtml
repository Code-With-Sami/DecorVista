@model DecorVista.Models.Designer
@{
    Layout = null;
}

<!doctype html>
<html lang="en" data-bs-theme="semi-dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Maxton | Bootstrap 5 Admin Dashboard Template</title>
    <!--favicon-->
    <link rel="icon" href="~/Designer/assets/images/favicon-32x32.png" type="image/png">
    <!-- loader-->
    <link href="~/Designer/assets/css/pace.min.css" rel="stylesheet">
    <script src="~/Designer/assets/js/pace.min.js"></script>

    <!--plugins-->
    <link href="~/Designer/assets/plugins/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Designer/assets/plugins/metismenu/metisMenu.min.css">
    <link rel="stylesheet" type="text/css" href="~/Designer/assets/plugins/metismenu/mm-vertical.css">
    <!--bootstrap css-->
    <link href="~/Designer/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@300;400;500;600&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Material+Icons+Outlined" rel="stylesheet">
    <!--main css-->
    <link href="~/Designer/assets/css/bootstrap-extended.css" rel="stylesheet">
    <link href="~/Designer/sass/main.css" rel="stylesheet">
    <link href="~/Designer/sass/dark-theme.css" rel="stylesheet">
    <link href="~/Designer/sass/blue-theme.css" rel="stylesheet">
    <link href="~/Designer/sass/responsive.css" rel="stylesheet">
</head>

<body class="bg-register">

    <div class="container-fluid my-5">
        <div class="row">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5 col-xxl-5 mx-auto">
                <div class="card rounded-4 mb-0 border-top border-4 border-primary border-gradient-1">
                    <div class="card-body p-5">
                        <img src="~/Designer/assets/Designer/assets/Designer/assets/Designer/assets/assets/images/logo1.png" class="mb-4" width="145" alt="">
                        <h4 class="fw-bold">Get Started as a Designer</h4>
                        <p class="mb-0">Fill out your details to register</p>

                        <div class="form-body my-4">
                            <form asp-action="RegisterDesigner" asp-controller="Designer" method="post" enctype="multipart/form-data" class="row g-3">
                                @Html.AntiForgeryToken()

                                <!-- Personal Info -->
                                <div class="col-md-6">
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LastName" class="form-label"></label>
                                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="PhoneNumber" class="form-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="ProfileImagePath" class="form-label">Profile Image</label>
                                    <input type="file" name="ProfileImage" class="form-control" />
                                </div>

                                <!-- Professional Info -->
                                <div class="col-md-6">
                                    <label asp-for="Specialization" class="form-label"></label>
                                    <select asp-for="Specialization" class="form-select">
                                        <option value="">Select Specialization</option>
                                        <option>Modern</option>
                                        <option>Minimalist</option>
                                        <option>Traditional</option>
                                        <option>Industrial</option>
                                        <option>Scandinavian</option>
                                    </select>
                                    <span asp-validation-for="Specialization" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="YearsOfExperience" class="form-label"></label>
                                    <input asp-for="YearsOfExperience" type="number" min="0" class="form-control" />
                                    <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Skills" class="form-label"></label>
                                    <input asp-for="Skills" class="form-control" placeholder="e.g. 3D Design, AutoCAD" />
                                </div>
                                <div class="col-12">
                                    <label asp-for="PortfolioLink" class="form-label"></label>
                                    <input asp-for="PortfolioLink" class="form-control" placeholder="Portfolio URL" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Portfolio Samples</label>
                                    <input type="file" name="PortfolioSamples" multiple class="form-control" />
                                </div>

                                <!-- Location Info -->
                                <div class="col-md-6">
                                    <label asp-for="Country" class="form-label"></label>
                                    <input asp-for="Country" class="form-control" placeholder="Country" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="City" class="form-label"></label>
                                    <input asp-for="City" class="form-control" placeholder="City" />
                                </div>
                                <div class="col-12">
                                    <label asp-for="Address" class="form-label"></label>
                                    <textarea asp-for="Address" class="form-control" placeholder="Full Address"></textarea>
                                </div>

                                <!-- About -->
                                <div class="col-12">
                                    <label asp-for="Bio" class="form-label"></label>
                                    <textarea asp-for="Bio" class="form-control" placeholder="Short Bio"></textarea>
                                </div>

                                <!-- Password -->
                                <div class="col-md-6">
                                    <label asp-for="Password" class="form-label"></label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword" class="form-label"></label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                                </div>

                                <!-- Terms -->
                                <div class="col-12">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" required>
                                        <label class="form-check-label">I agree to the Terms & Conditions</label>
                                    </div>
                                </div>

                                <!-- Submit -->
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-grd-danger">Register</button>
                                    </div>
                                </div>
                                <div class="col-12 text-start">
                                    <p class="mb-0">Already have an account? <a asp-action="LoginDesigner" asp-controller="Designer">Sign in here</a></p>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--plugins-->
    <script src="~/Designer/assets/js/jquery.min.js"></script>

    <script>
        $(document).ready(function () {
          $("#show_hide_password a").on('click', function (event) {
            event.preventDefault();
            if ($('#show_hide_password input').attr("type") == "text") {
              $('#show_hide_password input').attr('type', 'password');
              $('#show_hide_password i').addClass("bi-eye-slash-fill");
              $('#show_hide_password i').removeClass("bi-eye-fill");
            } else if ($('#show_hide_password input').attr("type") == "password") {
              $('#show_hide_password input').attr('type', 'text');
              $('#show_hide_password i').removeClass("bi-eye-slash-fill");
              $('#show_hide_password i').addClass("bi-eye-fill");
            }
          });
        });
    </script>
</body>
</html>
